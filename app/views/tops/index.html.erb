<h1>Tops#index</h1>
<p>Find me in app/views/tops/index.html.erb</p>

<% @posts.each do |post| %>
  <p><%= post.caption %></p>
  <%= link_to(post_path(post)) do %>
    <%= image_tag post.photos.first.image.url(:medium) %>
  <% end %>

  <% if post.user_id == current_user.id %>
    <%= link_to post_path(post), method: :delete, class: "ml-auto mx-0 my-auto" do %>
      <div>削除
      </div>
    <% end %>
  <% end %>

<% end %>
